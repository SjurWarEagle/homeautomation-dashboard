{
  "name": "homeautomation-dashboard",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "postinstall": "ngcc",
    "start": "ng serve --host 0.0.0.0 --disable-host-check",
    "start2": "ng serve --host 0.0.0.0 --disable-host-check --port 4310",
    "build": "ng build",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "prettier": "prettier -w src",
    "git": "run-s git:add git:commit git:push",
    "git:commit": "git commit -m \"update dependencies\"",
    "git:add": "git add package.json package-lock.json",
    "git:push": "git push",
    "dependencies:update": "ncu -u -x typescript,ngx-mqtt",
    "dependencies:install": "npm install",
    "update:dependencies and build": "run-s dependencies:update dependencies:install build git"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "12.1.2",
    "@angular/common": "12.1.2",
    "buffer": "6.0.3",
    "@angular/compiler": "12.1.2",
    "@angular/core": "12.1.2",
    "@angular/forms": "12.1.2",
    "@angular/platform-browser": "12.1.2",
    "@angular/platform-browser-dynamic": "12.1.2",
    "@angular/router": "12.1.2",
    "ngx-mqtt": "8.0.1",
    "rxjs": "7.2.0",
    "tslib": "2.3.0",
    "nosleep.js": "0.12.0",
    "zone.js": "0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "12.1.2",
    "@angular/cli": "12.1.2",
    "@angular/compiler-cli": "12.1.2",
    "@types/jasmine": "3.8.1",
    "@types/node": "16.3.2",
    "codelyzer": "6.0.2",
    "jasmine-core": "3.8.0",
    "jasmine-spec-reporter": "7.0.0",
    "npm-run-all": "4.1.5",
    "karma": "6.3.4",
    "karma-chrome-launcher": "3.1.0",
    "karma-coverage": "2.0.3",
    "karma-jasmine": "4.0.1",
    "karma-jasmine-html-reporter": "1.7.0",
    "protractor": "7.0.0",
    "ts-node": "10.1.0",
    "tslint": "6.1.0",
    "npm-check-updates": "11.8.3",
    "prettier": "2.3.2",
    "typescript": "4.2.3"
  }
}
